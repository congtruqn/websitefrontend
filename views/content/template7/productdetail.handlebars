<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Shop Detail</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">{{{details.name}}}</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active"><img class="d-block w-100" src="/static/{{siteinfo.customer_username}}/images/products/fullsize/{{contents.image}}" alt="First slide" /></div>
                        {{#each contents.list_images as |image|}}
                            <div class="carousel-item"><img class="d-block w-100" src="{{image.image_path}}/medium/{{image.image}}" alt='' alt="Second slide" /></div>
                        {{/each}}
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>{{{details.name}}}</h2>
                    <h5><del>{{formatCurrency contents.price}}₫</del>{{formatCurrency contents.sale_price}}₫</h5>
                    <p></p>
                    <h4>Giới thiệu:</h4>
                    <p>{{{details.desc}}}</p>
                </div>
					<ul class="product_detail_moreinfo">
					{{#each product_more_info as |list_detail|}}
						{{#if list_detail.info_value}}
						<li><p class="more_info_detail"> <b>{{{list_detail.info_name}}}:</b> <span class="more_info_price">{{{list_detail.info_value}}}</span></p></li>
						{{else}}
						{{/if}}
					{{/each}}
					</ul>
            </div>
        </div>
        <div class="row my-5">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Sản phẩm khác</h1>
                </div>
                <div class="featured-products-box owl-carousel owl-theme">
                    {{#each rateproducts as |images|}}
                        <div class="item">
                            <div class="products-single fix">
                                <div class="box-img-hover">
                                    <img  src="/static/{{images.image_path}}/medium/{{images.image}}" alt="{{images.alt}}" class="img-fluid" />
                                    <div class="mask-icon">
                                        <ul>
                                            <li>
                                                <a href="#" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a>
                                            </li>
                                            <li>
                                                <a href="#" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i class="far fa-heart"></i></a>
                                            </li>
                                        </ul>
                                        <a class="cart" href="/{{images.seo_url}}">Chi tiết</a>
                                    </div>
                                </div>
                                <div class="why-text">
                                    <h4><a href="/{{images.seo_url}}">{{truncateString images.detail.[0].name 47}}</a></h4>
                                    {{#if images.sale_price}}
                                        <p class="s_price">Giá: {{formatCurrency images.sale_price}}₫</p>
                                    {{/if}}
                                    {{#if images.price}}
                                        <h5>{{formatCurrency images.price}}₫</h5>
                                    {{/if}}                                    
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Cart -->