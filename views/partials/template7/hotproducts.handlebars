<!-- Start Products  -->
<div class="products-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title-all text-center">
                        <h1>Rau củ & Trái cây</h1>
                        <p>sản phẩm được trồng theo chuẩn VietGap.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="special-menu text-center">
                        <div class="button-group filter-button-group">
                            <button class="active" data-filter="*">All</button>
                            <button data-filter=".top-featured">Top featured</button>
                            <button data-filter=".best-seller">Best seller</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row special-list">
              {{#each hotandnewproducts as |listnews|}}
                <div class="col-lg-3 col-md-6 special-grid {{#if listnews.hot}}best-seller{{/if}} {{#if listnews.new}}top-featured{{/if}}">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <div class="type-lb">
                                <p class="sale">Sale</p>
                            </div>
                            <img src="/static/{{listnews.image_path}}medium/{{listnews.image}}" alt={{listnews.alt}}>
                            <div class="mask-icon">
                                <ul>
                                    {{#if listnews.sale}}<li><a href="/{{listnews.seo_url}}" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>{{/if}}
                                </ul>
                                <a class="cart" href="/{{listnews.seo_url}}">Xem chi tiết</a>
                            </div>
                        </div>
                        <div class="why-text">
                            <h4> <a class="cart" href="/{{listnews.seo_url}}">{{truncateString listnews.detail.[0].name 47}}</a></h4>
                            {{#if listnews.sale_price}}
                                <p class="s_price">Giá: {{formatCurrency listnews.sale_price}}₫</p>
                            {{/if}}
                            {{#if listnews.price}}
                                <h5>{{formatCurrency listnews.price}}₫</h5>
                            {{/if}}
                            
                        </div>
                    </div>
                </div>
              {{/each}}
            </div>
        </div>
</div>