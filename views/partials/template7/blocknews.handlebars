    <!-- Start Blog  -->
    <div class="latest-blog">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title-all text-center">
                        <h1>Tin tức</h1>
                        <p>Blog về thực phẩm bạn Không Nên Bỏ Lỡ.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                {{#each hotnews as |listnews|}}
                <div class="col-md-6 col-lg-4 col-xl-4">
                    <div class="blog-box">
                        <div class="blog-img">
                            <img class="img-fluid" src="{{listnews.image_path}}/medium/{{listnews.image}}" alt="" />
                        </div>
                        <div class="blog-content">
                            <div class="title-blog">
                                <h3><a href="/{{listnews.seo_url}}">{{truncateString listnews.detail.[0].name 47}}</a></h3>
                                <p>{{truncateString listnews.detail.[0].description 147}}</p>
                            </div>
                            <ul class="option-blog">
                                <li><a href="#"><i class="far fa-heart"></i></a></li>
                                <li><a href="#"><i class="fas fa-eye"></i></a></li>
                                <li><a href="#"><i class="far fa-comments"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <!-- End Blog  -->