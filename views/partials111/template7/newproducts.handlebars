<div class="cdz-block-title">
		<p class="b-title">Sản phẩm mới</p>
</div>
<div class="new_products">
  <ul>
    {{#each newproducts as |productitem|}}
    <li>
      <div class="new_product_i">
        <div class="new_product_images">
          <a href="/{{productitem.seo_url}}"><img src="/static/{{productitem.image_path}}thumb/{{productitem.image}}"
              alt={{productitem.alt}}></a>
        </div>
        <div class="new_product_detail">
          <p class="new_product_name"><a href="/{{productitem.seo_url}}">{{truncateString productitem.detail.[0].name
              45}}</a></p>
          <div id="clear"></div>
          <div class="product_price">
            <p>{{productitem.pricebeauty}}₫</p>
          </div>
          {{#if productitem.salepec}}
          <div class="sale_pricebeauty">
            <p>{{productitem.sale_pricebeauty}}₫</p>
          </div>
          {{/if}}
          <div id="clear"></div>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
  <div id="clear"></div>
</div>