<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="block-title">
      <h3>{{i18n "forklift_news"}}</h3>
    </div>
  </div>
  <div class="hot_new_content">
    {{#each hotnews as |hotnew|}}
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="hot_news_item">
        <div class="hot_news_img">
          {{#if hotnew.image2}}
          <a href="/{{hotnew.seo_url}}"><img src="/static/{{hotnew.image_path}}{{hotnew.image3}}" alt="{{hotnew.alt}}"
              class="img-fluid"></a>
          {{/if}}
          {{#if hotnew.image}}
          <a href="/{{hotnew.url}}"><img src="{{hotnew.image_path}}/medium/{{hotnew.image}}" alt="{{hotnew.alt}}"
              class="img-fluid" /></a>
          {{/if}}
        </div>
        <div class="hot_news_detail">
          <p class="news_create_date">{{timestampToString hotnew.create_date}}</p>
          <p class="hot_news_name"><a href="/{{hotnew.url}}">{{{truncateString hotnew.details.name 40}}}</a></p>
          <p class="hot_news_desc">{{{truncateString hotnew.details.desc 80}}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>