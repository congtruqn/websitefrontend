<div class="rokan-product-heading rokan-onsale-heading">
  <h2>Blog <span class="sup-title"></span></h2>
</div>
<div class="row">
  {{#each hotnews as |hotnew|}}
  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="hot_news_item">
      <div class="hot_news_img">
        <a href="/{{hotnew.url}}"><img  src="{{../base_url}}/{{hotnew.image_path}}medium/{{hotnew.image}}" alt="{{hotnew.alt}}" class="img-fluid" /></a>
      </div>
      <div class="hot_news_detail">
        <p class="hot_news_name"><a href="/{{hotnew.url}}">{{{truncateString hotnew.details.name 60}}}</a></p>
        <p class="news_create_date">{{timestampToString hotnew.create_date}}</p>
      </div>
    </div>
    
  </div>
  {{/each}}
</div>