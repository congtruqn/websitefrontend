<div class="row">
  {{#each newproducts as |listnews|}}
                <div class="col-xs-12">
                  <div class="hot_product_item">
                      <div class="hot_product_images">
                        <a href="/{{listnews.seo_url}}"><img src="/static/{{listnews.image_path}}thumb/{{listnews.image}}" alt={{listnews.alt}}></a>
                      </div>
                      <div class="product_detail">
                        {{#each listnews.detail as |productdetail|}}
                          <p class="product_name"><a href="/{{listnews.seo_url}}">{{{productdetail.name}}}</a></p>
                        {{/each}}
                        <div class="product_price"><p>Giá: {{listnews.pricebeauty}} ₫</p></div>
                      </div>
                    </div>
                </div> 
  {{/each}}
</div>  
<div id="clear"></div>
