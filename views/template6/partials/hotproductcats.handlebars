{{#each productcats as |productcat|}}
  <div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="list_product_content">
           <div class="productcat_title">
                {{#each productcat.detail as |productcatdetail|}}
                    <h2 class="productcat_name"><a href="/{{productcat.seo_url}}">{{{productcatdetail.name}}}</a></h2>
                    <p class="viewall"><a href="{{productcat.seo_url}}">Xem tất cả</a></>
                {{/each}}
           </div>
            <div class="cont">
            <div class="row">
              {{#each productcat.product as |listnews|}}
                <div class="col-xs-6 col-sm-6 col-md-3 {{listnews.class}}">
                  <div class="product_item">
                      <div class="product_images">
                          <a href="/{{listnews.seo_url}}"><img src="/static/{{listnews.image_path}}/medium/{{listnews.image}}" alt="{{listnews.alt}}"></a>
                      </div>
                      <div class="product_detail">
                        
                          <p class="product_name"><a href="/{{listnews.seo_url}}">{{truncateString listnews.detail.[0].name 47}}</a></p>
                        
                        <div class="product_price">
                          {{#if listnews.price}}
                          	<p class="s_price">Giá: {{formatCurrency listnews.price '₫'}}</p>
                          {{/if}}
                          {{#if listnews.sale_price}}
									          <p class="s_true_price">Giá: {{formatCurrency listnews.sale_price '₫'}}</p>
                          {{/if}}
                        </div>
                      </div>
                    </div>
                </div>
              {{/each}}
            </div>  
           </div>

        </div>  
      </div>
    </div>
{{/each}}